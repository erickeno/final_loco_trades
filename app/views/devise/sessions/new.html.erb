<div class="row">
	<div class="large-6 large-centered columns">

		<h2>Sign in</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

			<div><%= f.label :login, "Email or username" %><br />
        	<%= f.text_field :login, :autofocus => true %></div>

			<div><%= f.label :password %><br />
        	<%= f.password_field :password, placeholder: "password" %></div>

			<% if devise_mapping.rememberable? %>
				<div><%= f.check_box :remember_me, type: 'checkbox' %> <%= f.label :remember_me %></div>
			<% end %>

			<div><%= f.submit "Sign in", class: 'button radius' %></div>
		<% end %>

<%= render "devise/shared/links" %>
	</div>
</div>