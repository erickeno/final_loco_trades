<div class="row">
	<div class="large-6 large-centered columns">
		<h2 class="signuplabel">Sign up</h2>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

			<div class="row">
				<div class="small-3 columns name-field">
					<label for="right-label" class="right inline">
            <%= f.label :first_name, "first name:" %>
					</label>
				</div>
				<div class="small-9 columns">
          <%= f.text_field :first_name, :autofocus => true, placeholder: "first name" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns">
					<label for="right-label" class="right inline">
            <%= f.label :last_name, "Last Name:" %>
					</label>
				</div>
				<div class="small-9 columns">
          <%= f.text_field :last_name, placeholder: "last name" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns">
					<label for="right-label" class="right inline">
            			<%= f.label :email, "Email:" %>
					</label>
				</div>
				<div class="small-9 columns">
          			<%= f.email_field :email, placeholder: "email" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns">
					<label for="right-label" class="right inline">
            			<%= f.label :username, "Username:" %>
					</label>
				</div>
				<div class="small-9 columns">
          			<%= f.email_field :username, placeholder: "username" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns">
					<label for="right-label" class="right inline">
            <%= f.label :password, "Password:" %>
					</label>
				</div>
				<div class="small-9 columns">
          <%= f.password_field :password, placeholder: "password" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns">
					<label for="right-label" class="right inline">
            <%= f.label :password_confirmation %>
					</label>
				</div>
				<div class="small-9 columns">
          <%= f.password_field :password_confirmation, placeholder: "password confirmation" %>
				</div>
			</div>

			<div class="row">
				<div class="small-3 columns"></div>
				<div class="small-9 columns">
					<h6>By clicking "Submit" You agree that:</h6>
					<ul class="privacy_policy_list">
						<li>I have read and accepted the <a href="#" data-reveal-id="myModal" data-reveal>Privacy Policy.</a></li>
						
					</ul>
				</div>
			</div>
		  <div class="signupbutton"><%= f.submit "Sign up", class: 'button radius small' %></div>
		<% end %>

		<div class="row">
			<div class="large-6 large-offset-4 columns">
				<p>already a member?<span><%= render "devise/shared/links" %></span>
			</div>
		</div>
	</div>
</div>











