	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :exchange %>
	<%= f.text_field :exchange %>

	<%= f.label :city %>
	<%= f.text_field :city %>

	<%= f.label :state %>
	<%= f.text_field :state %>

	<%= f.submit class: 'button radius' %>
<% end %>