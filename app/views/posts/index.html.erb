			<%= link_to image_tag("/app2dup.jpg"), root_path %>
		</div>
    <%= search_form_for @search do |f| %>
		<div class="large-10 small-12 columns">
			<div class="row collapse">
				<div class="small-7 columns">
					<%= f.text_field :description_cont %>
				</div>
				<div class="small-3 columns">
					<%= f.select :category_cont, ["",  "Art", "Books and Movies", "Clothing","Collectibles", "Computers & Related", "Construction Materials", "Crafts & Hobbies", "Entertainment", "Farm & Ranch","Food & Beverages","Free Stuff", "Gardening","Gifts", "Health & Beauty", "Home & Electronics","Inductrial & Commercial", "Jewelry & Gemstones", "Medical Supplies","Miscellaneous","Motorworld","Music","Office Supplies","Others","Pets/Animals","Photography","Real Estate & Notes","Services","Sporting Goods & Recreation","Tools","Toys & Games","Vacation & Travel"] %>
				</div>
				<div class="small-2 columns">
          <div><%= f.submit "Search", class: "button postfix" %></div>
    <% end %>
				</div>
			</div>
		</div>
	</div>
</form>


<div class="row">
	<div class="large-12 columns">
	  <dl class="sub-nav" id="subnav2-homepage">
